        "@sveltejs/vite-plugin-svelte": "^6.1.4",
        "@types/crypto-js": "^4.2.2",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.2.0",
        "prettier-plugin-svelte": "^3.4.0",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "svelte": "^5.38.6",
        "svelte-check": "^4.3.1",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.12",
        "tslib": "^2.8.1",
        "typescript": "^5.9.2",
        "vite": "^7.1.4",
        "wrangler": "^4.33.2"
