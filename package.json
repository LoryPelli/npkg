{
    "name": "npkg",
    "private": true,
    "scripts": {
        "dev": "pnpm \"/dev:.*/\"",
        "dev:frontend": "vite dev",
        "dev:api": "cd api && pnpm dev",
        "build": "vite build",
        "preview": "vite preview",
        "format": "prettier --write .",
        "deploy:api": "cd api && bun prod",
        "deploy:cdn": "cd cdn && bun prod",
        "deploy:all": "bun deploy:api && bun deploy:cdn"
    },
    "type": "module",
    "devDependencies": {
        "@fontsource/fira-mono": "^5.2.6",
